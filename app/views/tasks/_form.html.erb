<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

<% if !@task.new_record? %>
    <div class="field">
        <%= f.label "Task completed ?" %> <br />
        <%= f.check_box :completed%> <br />
    </div>
<% end %>

</div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
